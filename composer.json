{
    "name": "walkwizus/magento2-module-meilisearch",
    "description": "Meilisearch integration for Magento 2",
    "type": "magento2-module",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Jimmy Carricart",
            "email": "jimmy@walkwizus.fr"
        }
    ],
    "homepage": "https://github.com/walkwizus/magento2-module-meilisearch",
    "keywords": [
        "Adobe Commerce",
        "Magento",
        "Magento 2",
        "Meilisearch",
        "Search",
        "InstantSearch"
    ],
    "require": {
        "magento/framework": ">=103.0.4",
        "magento/module-eav": "^102.1",
        "magento/module-swatches": "^100.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.12",
        "bitexpert/phpstan-magento": "^0.11.0",
        "phpstan/extension-installer": "^1.4"
    },
    "suggest": {
        "meilisearch/meilisearch-php": "Required to interact with Meilisearch API from PHP.",
        "walkwizus/magento2-module-meilisearch-breeze": "Provides optimized frontend support for Breeze-based themes.",
        "walkwizus/magento2-hyva-meilisearch": "Required for compatibility with Hyv√§ Themes frontend."
    },
    "replace": {
        "walkwizus/module-meilisearch-ai": "self.version",
        "walkwizus/module-meilisearch-base": "self.version",
        "walkwizus/module-meilisearch-catalog": "self.version",
        "walkwizus/module-meilisearch-frontend": "self.version",
        "walkwizus/module-meilisearch-indices": "self.version",
        "walkwizus/module-meilisearch-merchandising": "self.version"
    },
    "autoload": {
        "files": [
            "src/module-meilisearch-ai/registration.php",
            "src/module-meilisearch-base/registration.php",
            "src/module-meilisearch-catalog/registration.php",
            "src/module-meilisearch-frontend/registration.php",
            "src/module-meilisearch-indices/registration.php",
            "src/module-meilisearch-merchandising/registration.php"
        ],
        "psr-4": {
            "Walkwizus\\MeilisearchAi\\": "src/module-meilisearch-ai",
            "Walkwizus\\MeilisearchBase\\": "src/module-meilisearch-base",
            "Walkwizus\\MeilisearchCatalog\\": "src/module-meilisearch-catalog",
            "Walkwizus\\MeilisearchFrontend\\": "src/module-meilisearch-frontend",
            "Walkwizus\\MeilisearchIndices\\": "src/module-meilisearch-indices",
            "Walkwizus\\MeilisearchMerchandising\\": "src/module-meilisearch-merchandising"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Walkwizus\\MeilisearchAi\\Test\\": "src/module-meilisearch-ai/Test",
            "Walkwizus\\MeilisearchBase\\Test\\": "src/module-meilisearch-base/Test",
            "Walkwizus\\MeilisearchCatalog\\Test\\": "src/module-meilisearch-catalog/Test",
            "Walkwizus\\MeilisearchFrontend\\Test\\": "src/module-meilisearch-frontend/Test",
            "Walkwizus\\MeilisearchIndices\\Test\\": "src/module-meilisearch-indices/Test",
            "Walkwizus\\MeilisearchMerchandising\\Test\\": "src/module-meilisearch-merchandising/Test"
        }
    },
    "scripts": {
        "test:unit": "vendor/bin/phpunit -c phpunit.xml.dist",
        "phpstan": "vendor/bin/phpstan analyse",
        "test:coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-html tmp/report/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    },
    "config": {
        "allow-plugins": {
            "magento/composer-dependency-version-audit-plugin": true,
            "phpstan/extension-installer": true
        }
    }
}
